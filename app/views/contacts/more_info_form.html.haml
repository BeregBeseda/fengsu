= form_for @contact, action: 'create' do |f|

  = f.text_field    :name
  = f.text_field    :surname
  = f.text_field    :city
  = f.text_field    :country
  = f.date_field    :birthday
  = f.text_area     :about_yourself
  
  = f.hidden_field  :email,              value:  "#{@order.email}"
  = f.hidden_field  :group,              value:  "#{@order.group}"      
  = f.hidden_field  :order_number,       value:  "#{@order.id}"    

  = f.submit        'Ok'
